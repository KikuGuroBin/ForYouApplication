<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ForYouApplication.SendFormDetail"
             Title="Detail">
    <RelativeLayout HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    x:Name="MainLayout">
        <!--
        <Label Text="This is a detail page. To get the 'triple' line icon on each platform add a icon to each platform and update the 'Master' page with an Icon that references it."/>
        -->

        <Editor x:Name="SendText"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"/>

        <StackLayout >
            <Button x:Name="Back" 
                    Text="Back"
                    VerticalOptions="End"
                    Margin="0"/>
            <Button x:Name="ShortCut"
                    Text="SH"
                    VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </RelativeLayout>
</ContentPage>