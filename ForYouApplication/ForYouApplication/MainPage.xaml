<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ForYouApplication"
             x:Class="ForYouApplication.MainPage">

    <StackLayout>
        <Label
            x:Name="Label1"
            Text="Welcome to ForYouApplication!" 
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="Button1"
            Text="BUTTON"
            Clicked="OnClick"/>

        <Button 
            x:Name="Button2"
            Text="BUTTON2"
            Clicked="OnClick"/>

        <Button
            x:Name="Button3"
            Text="BUTTON3"
            Clicked="OnClick2"/>

        <Button
            x:Name="ScanButton"
            Text="QRScan"
            Clicked="ScanButtonClick"/>

        <Editor
            x:Name="Address"/>
    </StackLayout>
</ContentPage>